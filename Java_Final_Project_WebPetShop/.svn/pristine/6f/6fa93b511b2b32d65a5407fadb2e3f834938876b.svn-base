html body {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    background-color: rgb(231, 231, 231);
}

body p {
    font-size: 30px;
    font-weight: 600;
    margin: 100px 0 40px 100px;
}

body .content1 {
    display: flex;
}

body .content1 .tableContent1 {
    border: 1px solid white;
    width: 1000px;
    height: auto;
    background-color: white;
    border-radius: 10px;
    margin: 40px 0 0 100px;
}

body .content1 .tableContent1 p {
    font-size: 20px;
    margin: 10px 0 8px 10px;
}

body .content1 .tableContent1 .thanhToan {
    margin: 270px 0 0 630px;
}

body .content1 .tableContent1 .thanhToan .sumTT p {
    font-size: 18px;
    font-weight: bold;
    display: inline-block;
    margin: 0;
}

body .content1 .tableContent1 .thanhToan .giamGia p {
    font-size: 18px;
    font-weight: bold;
    display: inline-block;
    margin: 0;
}

body .content1 .tableContent1 .thanhToan .daThanhToan p {
    font-size: 18px;
    font-weight: bold;
    display: inline-block;
    margin: 0;
}

body .content1 .tableContent1 .thanhToan .chuaThanhToan p {
    font-size: 18px;
    font-weight: bold;
    display: inline-block;
    margin: 0;
}

body .content1 .tableContent1 table tbody tr td {
    padding: 15px 10px 15px 10px;
}

body .content1 .tableContent2 {
    border: 1px solid white;
    width: 500px;
    height: 380px;
    background-color: white;
    border-radius: 10px;
    margin: 40px 15px 0 50px;
}

body .content1 .tableContent2 p {
    font-size: 18px;
    font-weight: bold;
    margin: 10px 0 0 18px;
}

body .content1 .tableContent2 .btn1 input {
    width: 450px;
    height: 45px;
    margin: 10px 0 10px 20px;
    border-radius: 10px;
    border: 1px solid rgb(219, 219, 219);
}

body .content1 .tableContent2 .btn1 p {
    font-size: 14px;
    margin: 0 0 0 20px;
    padding: 0;
}

body hr {
    width: 1800px;
    margin-left: 40px
}

body .btnContent {
    display: flex;
    float: right;
    margin: 10px 250px 0 0;
}

body .btnContent .btn {
    margin: 10px;
}